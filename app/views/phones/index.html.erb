<h1>Listing phones</h1>

<hr />
<%= form_tag phones_path, method: :get, id: 'search-form', remote: true do %>
  <%= label_tag 'query', 'Search phones:' %>
  <%= text_field_tag 'query', params[:query] %>
  <%= submit_tag 'Find' %> | <%= link_to 'Reset', phones_path, id: 'cancel-search-button' %>
<% end %>
<hr />

<table id='phones'>

<%= render 'table_header' %>
<%= render @phones %>

</table>

<hr />
<%= link_to 'Create new', new_phone_path, id: 'create-button' %> |
<%= link_to 'Export as CSV', export_phones_path %> |
<%= link_to 'Import from CSV', import_phones_path %>

<br />
<hr />

<div id='form-placeholder'>
</div>

<div style='display: none;' id='create-form-template'>
  <%= render 'form' %>
</div>
