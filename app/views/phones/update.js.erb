<% unless @phone.errors.any? %>
  $('#phone-<%= @phone.id %>').replaceWith('<%= escape_javascript(render @phone) %>');
  $('#form-placeholder').html('');
<% else %>
  console.log('errors');
  var $form = $('#edit_phone_<%= @phone.id %>'), $errorDiv = $('<div id="error_explanation">'), $errorList = $('<ul>');

  <% @phone.errors.full_messages.each do |msg| %>
    $errorList.append('<li><%= escape_javascript msg %></li>');
  <% end %>

  $form.find('#error_explanation').remove();
  $form.prepend($errorDiv.append($errorList));
<% end %>
